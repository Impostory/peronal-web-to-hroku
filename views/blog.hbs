<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>nodejs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/public/style.css" rel="stylesheet">
</head>
<body>
    <!-- Start of Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
              <img src="/public/assets/logo.png" alt="logo">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active text-orange fw-bold" aria-current="page" href="/blog">Blog</a>
              </li>
            </ul>        
            
            {{#if isLogin}}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold text-muted" aria-current="page" href="/blog">Hello, {{user.name}}</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active fw-bold me-3" aria-current="page" href="/signout">Sign Out</a>
              </li>
            </ul>
            {{else}}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold" aria-current="page" href="/register">Sign Up</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active fw-bold me-3" aria-current="page" href="/login">Login</a>
              </li>
            </ul>
            {{/if}}
            <a class="btn btn-orange px-3 py-1" href="/contact">Contact Me</a>
            
          </div>
        </div>
    </nav>
    <!-- End of Navbar -->


    {{#if messages.success}}
    <div class="alert alert-success" role="alert">
      {{messages.success}}
    </div>
    {{/if}}

    {{#if messages.danger}}
    <div class="alert alert-danger" role="alert">
      {{messages.danger}}
    </div>
    {{/if}}


    <div class="container">
        
        {{!-- {{#each news}} --}}
        {{#if isLogin}}       
        <div class="row my-3">
            <div class="btn-group justify-content-end" role="group" >                      
                <a class="btn btn-danger" href="/add-blog">Create Post</a>           
            </div>
        </div>
        <div class="row my-3">
            <div class="btn-group justify-content-end" role="group" >                      
                <a class="btn btn-danger" href="/add-experience">Create Experience Info</a>           
            </div>
        </div>
        {{/if}}
        {{!-- {{/each}} --}}

        {{#each news}}
        <div class="card my-3">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="{{this.image}}" class="img-fluid rounded-start" alt="blog-img" style="height: 100%;">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  {{#if isLogin}}
                  <div class="btn-toolbar justify-content-end" role="toolbar" aria-label="Toolbar with button groups">  
                    <a href="/edit-blog/{{this.id}}" class="btn btn-secondary">Edit</a>
                    <a href="/delete-blog/{{this.id}}" class="btn btn-danger">Delete</a> 
                  </div>
                  {{/if}}
                  <h5 class="card-title">
                      <a class=" text-dark fs-3 fw-bold " href="/detail-blog/{{this.id}}" target="_blank"> {{this.title}}</a> 
                  </h5>
                  <p class="card-text"><small class="text-muted">{{this.postAt}} | {{this.author}}</small></p>
                  <p class="card-text text-wrap overflow-hidden" style="height: 4.5rem;">{{this.content}}</p>
                  <p class="card-text text-end"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
              </div>
            </div>
        </div>
        {{/each}}
        

    </div>
    

</body>
</html>