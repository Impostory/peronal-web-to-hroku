<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>nodejs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/public/style.css" rel="stylesheet">
</head>
<body>
      <!-- Start of Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
              <img src="/public/assets/logo.png" alt="logo">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active text-orange fw-bold" aria-current="page" href="/blog">Blog</a>
              </li>
            </ul>        
            
            {{#if isLogin}}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold text-muted" aria-current="page" href="/blog">Hello, {{user.name}}</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active fw-bold me-3" aria-current="page" href="/signout">Sign Out</a>
              </li>
            </ul>
            {{else}}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold" aria-current="page" href="/register">Sign Up</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active fw-bold me-3" aria-current="page" href="/login">Login</a>
              </li>
            </ul>
            {{/if}}


            <a class="btn btn-orange px-3 py-1" href="/contact">Contact Me</a>
            
          </div>
        </div>
    </nav>
    <!-- End of Navbar -->

    {{#each data}}  
    <div class="container-fluid mt-5">
        <div class="row g-0 justify-content-center">

            <div class="col-lg-9">
                <h1 class="fs-1">{{this.title}}</h1>
                <p class="text-muted">{{this.postAt}} | {{this.author}}</p>
            </div>

            <div class="col-lg-9 mb-3">
                <img src="{{this.image}}" alt="" class="img-fluid">
            </div>

            <div class="col-lg-9">
                <p class="fs-5"style="text-align: justify;" >{{this.content}}</p>
            </div>

        </div>
    </div>
    {{/each}}
    

</body>
</html>