<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>nodejs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/public/style.css" rel="stylesheet">
</head>
<body>
    <!-- Start of Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
              <img src="/public/assets/logo.png" alt="logo">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active text-orange fw-bold" aria-current="page" href="/blog">Blog</a>
              </li>
            </ul>        
            
            <a class="btn btn-orange px-3 py-1" href="/contact">Contact Me</a>
            
          </div>
        </div>
    </nav>
    <!-- End of Navbar -->
  
    <div class="container-form-blog d-flex align-items-center justify-content-center mt-2">

        <div class="container-form" >
            <p class="h2 text-center mb-4">Contact Me</p>

            <form>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label fw-bold">Name</label>
                  <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail2" class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail2" aria-describedby="emailHelp">
                  </div>

                <div class="mb-3">
                   <label for="exampleInputEmail3" class="form-label fw-bold">Phone Number</label>
                   <input type="text" class="form-control" id="exampleInputEmail3" aria-describedby="emailHelp">
                </div>    

                <div class="mb-3">
                <label for="exampleInputEmail3" class="form-label fw-bold">Subject</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>What do you need?</option>
                    <option value="1">Hiring Me!</option>
                    <option value="2">Colaborate</option>
                    <option value="3">Ask Question</option>
                </select>
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label fw-bold">Content</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                  </div>
                
                <div class="d-flex justify-content-end ">
                    <button type="submit" class="btn btn-orange mt-5">Post Blog</button>
                </div>  
              </form>
        </div>
    </div>


</body>
</html>