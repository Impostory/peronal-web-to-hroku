<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>nodejs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/public/style.css" rel="stylesheet">
</head>
<body>
    <!-- Start of Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
              <img src="/public/assets/logo.png" alt="logo">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active text-orange fw-bold" aria-current="page" href="/blog">Blog</a>
              </li>
            </ul>        
            
            {{#if isLogin}}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold text-muted" aria-current="page" href="/blog">Hello, {{user.name}}</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active fw-bold me-3" aria-current="page" href="/signout">Sign Out</a>
              </li>
            </ul>
            {{else}}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item ms-2">
                <a class="nav-link active fw-bold" aria-current="page" href="/register">Sign Up</a>
              </li>
              <li class="nav-item" >
                <a class="nav-link active fw-bold me-3" aria-current="page" href="/login">Login</a>
              </li>
            </ul>
            {{/if}}


            <a class="btn btn-orange px-3 py-1" href="/contact">Contact Me</a>
            
          </div>
        </div>
    </nav>
    <!-- End of Navbar -->

    {{#if messages.danger}}
    <div class="alert alert-danger" role="alert">
      {{messages.danger}}
    </div>
    {{/if}}

    {{#each news}}
    <div class="container-form-blog d-flex align-items-center justify-content-center">

        <div class="container-form" >
            <p class="h2 text-center mb-5">Edit Post Blog</p>

            <form action="/blog/{{this.id}}" method="POST" enctype="multipart/form-data">
             
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Title</label>
                    <input name="title"  type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{this.title}}">
                  </div>  

                  <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Content</label>
                    <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="3" >{{this.content}}</textarea>
                  </div>

                  <div class="mb-3">
                    <label for="formFile" class="form-label">Upload-Image</label>
                    <input name="image" class="form-control" type="file" id="formFile" value="{{this.image}}">
                  </div> 
                  <div class="d-flex justify-content-end ">
                  
                    <button type="submit" class="btn btn-orange mt-5">Post Blog</button>
                </div>  
              </form>
        </div>
    </div>
    {{/each}}

</body>
</html>